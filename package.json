{
  "name": "launchbot-mdl",
  "version": "1.2.1",
  "description": "Styleguide for Launchbot",
  "private": true,
  "license": "Apache-2.0",
  "author": "Martin Bravo",
  "repository": "bravomartin/launchbot-mdl",
  "main": "dist/material.min.js",
  "engines": {
    "node": ">=0.12.0"
  },
  "scripts": {
    "build": "npm run scss & npm run cleancss",
    "scss" : "node-sass src/material-design-lite.scss -o dist/",
    "cleancss": "cleancss -o dist/material-design-lite.min.css dist/material-design-lite.css ",
    "test": "gulp && git status | grep 'working directory clean' >/dev/null || (echo 'Please commit all changes generated by building'; exit 1)"
  },
  "babel": {
    "only": "gulpfile.babel.js"
  },
  "devDependencies": {
    "clean-css": "^3.4.20",
    "node-sass": "^3.10.1"
  }
}
